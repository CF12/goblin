<div class="table-container">
    <table class="table transactions">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {{#each txs}}
            <tr class="tx-{{slugify category}} {{#ifCond txAmount "<" 0}}tx-negative{{else}}tx-positive{{/ifCond}}" data-txID="{{hash}}">
                <td class="txDate">
                    {{txDate}}
                </td>
                <td>
                    {{#if redacted}}
                    {{#eq category "Donation"}}
                    <i>Anonymous Donation ({{../hash}})</i>
                    {{else}}
                    <i>Recipient Redacted ({{../hash}})</i>
                    {{/eq}}
                    {{else}}
                    <strong>{{txDisplayName}}</strong>
                    {{/if}}
                </td>

                <td class="tx-category"><span class="dot tx-dot-{{slugify category}}"></span>{{category}}</td>

                <td class="amount">{{currency txAmount}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>